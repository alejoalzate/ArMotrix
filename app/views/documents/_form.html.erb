<%= simple_form_for(@document, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

	<%= f.error_notification %>
<%= display_base_errors @document %>

    <%= f.input :name %>
    <%= f.input :acronym %>
 
  <div class="form-actions">
