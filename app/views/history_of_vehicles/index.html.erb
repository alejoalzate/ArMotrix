<%- model_class = HistoryOfVehicle -%>
  <div class="page-header">
    <h1><u>Historial De Vehiculos</u><h1>
  </div>
<h3>Buscador Historial De Pago</h3>
<div class="navbar">
    <div class="navbar-inner">
    <i><li style="margin-top: 18px;" class="brand" href="#" >Buscar</li></i>
      <div class="row">
        <div class="span6">
           <%= form_tag request.path, :method => 'get' do %>
    <%= content_tag :label do %>
    <br>
    <%= text_field_tag :search, params[:search] , :id => "element" %>
        <%= submit_tag "Consultar", :name => nil, :class => "btn btn-primary", :style => "margin-top: -10px;" %>
        <% end %>
    <% end %>
        </div>
      </div>
    </div>
  </div>


<br />
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Placa</th>
      <th>Cliente</th>
      <th>Fecha</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @history_of_vehicles %> 
  </tbody>
<tfoot>
<tr>
<td><%= link_to image_tag('new.png', :title  => "Nuevo historial de vehiculos"),  new_history_of_vehicle_path, :remote => true %></td>
</tr>
</tfoot>
</table>
<br />
<br />
  <div align="center">
    <%= will_paginate @history_of_vehicles, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
  </div>
  <tr>
    <td><b>Total Historial de vehiculos:</b></td>
      <td>
        <input type="text"  id="totalregs" class="span1" value="<%= @history_of_vehicles.total_entries %>" readonly />
     </td>
  </tr>