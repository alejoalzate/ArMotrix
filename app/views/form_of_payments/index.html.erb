<%- model_class = FormOfPayment -%>
  <div class="page-header">
    <h1><u>Formas De Pago</u><h1>
  </div>
<h3>Buscador Formas De Pago</h3>
<div class="navbar">
    <div class="navbar-inner">
    <i><li style="margin-top: 18px;" class="brand" href="#" >Buscar</li></i>
      <div class="row">
        <div class="span6">
           <%= form_tag request.path, :method => 'get' do %>
    <%= content_tag :label do %>
    <br>
    <%= text_field_tag :search, params[:search] , :id => "element" %>
        <%= submit_tag "Consultar", :name => nil, :class => "btn btn-primary", :style => "margin-top: -10px;" %>
        <% end %>
    <% end %>
        </div>
      </div>
    </div>
  </div>


<br />
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th>Siglas</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @form_of_payments %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to image_tag('new.png', :title  => "Nueva Forma de Pago"), new_form_of_payment_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br />
<br />
  <div align="center">
    <%= will_paginate @form_of_payments, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
  </div>
  <tr>
    <td><b>Total Formas De Pago:</b></td>
      <td>
        <input type="text"  id="totalregs" class="span1" value="<%= @form_of_payments.total_entries %>" readonly />
     </td>
  </tr>