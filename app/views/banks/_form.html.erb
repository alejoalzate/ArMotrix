<%= simple_form_for(@bank, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @bank %>


  <%= f.input :name %>
  <%= f.input :acronym %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <%= f.input :description %>
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', banks_path, :class => 'btn btn-small' %>
</div>
<% end %>
