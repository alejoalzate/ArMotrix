<%= simple_form_for(@supplier, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @supplier %>

    <%= f.association :document %>
    <%= f.input :social_reason %>
    <%= f.input :phone_one %>
    <%= f.input :phone_two %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :state %>

  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', suppliers_path, :class => 'btn btn-small' %>
  </div>
<% end %>
