<%- model_class = WorkOrder -%>
  <div class="page-header">
    <h1><u>Ordenes De Trabajo</u><h1>
  </div>
<h3>Buscador Ordenes De Trabajo</h3>
<div class="navbar">
    <div class="navbar-inner">
    <i><li style="margin-top: 18px;" class="brand" href="#" >Buscar</li></i>
      <div class="row">
        <div class="span6">
           <%= form_tag request.path, :method => 'get' do %>
    <%= content_tag :label do %>
    <br>
    <%= text_field_tag :search, params[:search] , :id => "element" %>
        <%= submit_tag "Consultar", :name => nil, :class => "btn btn-primary", :style => "margin-top: -10px;" %>
        <% end %>
    <% end %>
        </div>
      </div>
    </div>
  </div>


<br />
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Dirección</th>
      <th>Placa</th>
      <th>Telefono</th>
      <th>Marca</th>
      <th>Fecha Recibido</th>
      <th>Tipo</th>
      <th>Fecha De Entrega</th>
      <th>Color</th>
      <th>kilometraje</th>
      <th>Fecha De Expiración</th>
      <th>Vehiculo</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @work_orders %>
   </tbody>
  <tfoot>
    <tr>
      <td><%= link_to image_tag('new.png', :title  => "Nueva orden de trabajo"), new_work_order_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br />
<br />
  <div align="center">
    <%= will_paginate @work_orders, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
  </div>
  <tr>
    <td><b >Total Ordenes De Trabajo:</b></td>
      <td>
        <input type="text"  id="totalregs" class="span1" value="<%= @work_orders.total_entries %>" readonly />
     </td>
  </tr>