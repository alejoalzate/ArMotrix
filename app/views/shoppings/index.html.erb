<%- model_class = Shopping -%>
  <div class="page-header">
    <h1><u>Compras</u><h1>
  </div>
<h3>Buscador Compras</h3>
<div class="navbar">
    <div class="navbar-inner">
    <i><li style="margin-top: 18px;" class="brand" href="#" >Buscar</li></i>
      <div class="row">
        <div class="span6">
           <%= form_tag request.path, :method => 'get' do %>
    <%= content_tag :label do %>
    <br>
    <%= text_field_tag :search, params[:search] , :id => "element" %>
        <%= submit_tag "Consultar", :name => nil, :class => "btn btn-primary", :style => "margin-top: -10px;" %>
        <% end %>
    <% end %>
        </div>
      </div>
    </div>
  </div>


<br />
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Proveedor</th>
      <th>Fecha</th>
      <th>Estado</th>
      <th>Factura del proveedor</th>
      <th>Concepto</th>
      <th>Valor</th>
      <th>Cantidad</th>
      <th>Iva</th>
      <th>Descuento</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @shoppings %>
   </tbody>
  <tfoot>
    <tr>
      <td><%= link_to image_tag('new.png', :title  => "Nueva Compra"), new_shopping_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br />
<br />
  <div align="center">
    <%= will_paginate @shoppings, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
  </div>
  <tr>
    <td><b >Total Compras:</b></td>
      <td>
        <input type="text"  id="totalregs" class="span1" value="<%= @shoppings.total_entries %>" readonly />
     </td>
  </tr>