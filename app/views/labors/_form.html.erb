<%= simple_form_for(@labor, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @labor %>
  
  <%= f.input :description %>
  <%= f.input :cost_center_id %>
  <%= f.input :sale_price %>
  <%= f.input :quantity %>
  <%= f.input :mechanical_id %>
  <%= f.input :iva %>
  <%= f.input :discount %>
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', labors_path, :class => 'btn btn-small' %>
  </div>
<% end %>
